#!/bin/bash

ARCH=armv7hf

docker build \
     --build-arg ARCH=$ARCH \
     --build-arg PHP_VERSION=$PHP_VERSION \
     --build-arg PHP_VARIANT=$PHP_VARIANT \
     -t $DOCKER_REPO:$PHP_VERSION-$PHP_VARIANT-$ARCH .

ARCH=aarch64

docker build \
     --build-arg ARCH=$ARCH \
     --build-arg PHP_VERSION=$PHP_VERSION \
     --build-arg PHP_VARIANT=$PHP_VARIANT \
     -t $DOCKER_REPO:$PHP_VERSION-$PHP_VARIANT-$ARCH .

ARCH=amd64

docker build \
     --build-arg ARCH=$ARCH \
     --build-arg PHP_VERSION=$PHP_VERSION \
     --build-arg PHP_VARIANT=$PHP_VARIANT \
     -t $DOCKER_REPO:$PHP_VERSION-$PHP_VARIANT-$ARCH \
     -t $DOCKER_REPO:$DOCKER_TAG .